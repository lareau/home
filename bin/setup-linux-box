#!/bin/sh

sudo apt-get update

sudo apt-get -y install \
  build-essential \
  cflow \
  dconf-tools \
  ethtool \
  nmap \
  pcaputils \
  ssh \
  tshark \
  vim \
  vim-doc \
  wireshark \
  zsh \

sudo chsh -s /bin/zsh `id -un`

gsettings set org.mate.peripherals-keyboard-xkb.kbd options "['caps\tcaps:ctrl_modifier']"
